{
  "name": "inrepocodereview",
  "displayName": "InRepoCodeReview",
  "description": "In-repository code review extension for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:inrepocodereview.openReview",
    "onCommand:inrepocodereview.setUserName"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inrepocodereview.openReview",
        "title": "Open Code Review"
      },
      {
        "command": "inrepocodereview.createReview",
        "title": "Create Review"
      },
      {
        "command": "inrepocodereview.setUserName",
        "title": "Set UserName"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "inrepocodereview.createReview",
          "when": "editorTextFocus",
          "group": "inrepocodereview"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "inrepocodereview.createReview",
          "when": "commentController == inrepocodereview",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "InRepo Code Review",
      "properties": {
        "inrepocodereview.userName": {
          "type": "string",
          "default": "",
          "description": "Username for code review comments"
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0"
  }
}